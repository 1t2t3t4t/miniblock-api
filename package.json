{
  "name": "lope",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "start": "rm -rf build && tsc && node build/server",
    "local": "ENV=development ts-node server",
    "build": "rm -rf build && tsc",
    "staging": "ENV=staging ts-node server",
    "test": "ENV=test nyc --reporter=text mocha --retries 3 --timeout 10000 --require ts-node/register --exit ./test/**/*.test.{js,ts}",
    "postinstall": "link-module-alias",
    "gen-doc": "apidoc -i src/ -o docs/ && open docs/index.html",
    "tsc": "tsc"
  },
  "nyc": {
    "extension": [
      ".js",
      ".ts"
    ],
    "exclude": [
      "src/db/*",
      "src/v1/Helper/*",
      "test/*"
    ]
  },
  "_moduleAliases": {
    "@root": "build/",
    "@model": "build/src/model",
    "@v1": "build/src/v1",
    "@middleware": "build/src/middleware",
    "@utils": "build/src/utils",
    "@db": "build/src/db"
  },
  "author": "Nathakorn Throngtrairat",
  "license": "ISC",
  "dependencies": {
    "@types/express": "^4.17.0",
    "@types/mongoose": "^5.5.8",
    "body-parser": "^1.18.3",
    "express": "^4.16.4",
    "firebase-admin": "^8.2.0",
    "jsonwebtoken": "^8.4.0",
    "mongodb": "^3.3.2",
    "mongoose": "^5.3.14",
    "reflect-metadata": "^0.1.13",
    "supertest": "^3.3.0",
    "typescript": "^3.5.3",
    "validator": "^10.9.0"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.7",
    "@types/supertest": "^2.0.8",
    "apidoc": "^0.17.7",
    "link-module-alias": "^1.1.5",
    "mocha": "^5.2.0",
    "mongodb-memory-server": "^5.1.4",
    "nyc": "^14.1.1",
    "sinon": "^7.3.2",
    "ts-node": "^8.3.0"
  }
}
